<%- include("header") -%>

    <div class="box" id="heading">
      <h1> <%=listTitle%> </h1>
      </div>

      <div class="box">

          <%  newListItems.forEach(function(item) { %>
            <form class="" action="/delete" method="post">

              <div class="item">
                <input type="checkbox" name="checkbox" value ="<%=item._id%>" onChange="this.form.submit()"> <!--onChange="this.form.submit() will make it act like a submit button -->
                <p><%=  item.name %></p>                                <!--in order to tap into the checkbox, we need to have a name for it -->
                                                              <!-- We add a value so every time we iterate in the loop we assign to the checkbox an id corresponding to what it is in the itemSchema in the DB-->
                </div>
                <input type="hidden" name="listName" value ="<%=listTitle%>"></input>
                </form>
          <%  }); %>

      <form class="item" action="/" method="post">

        <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
        <button type="submit" name="list" value="<%=listTitle%>">+</button> <!-- whenever we have a submit button it will submit data inside the form, it will post to the required route.  -->
      </form>
      </div>

      <%- include("footer") -%>
